<div class='shadow-sm p-3 m-5 rounded'>
<%= form_with model:@idea, local: true do |f| %>
<% if @idea.errors.present? %>
<%= @idea.errors.full_messages.join(', ') %>
<% end%>


    <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control'%>
    </div>

    <div class='form-group'>
        <%= f.label :description %>
        <%= f.text_area :description, cols:50, rows:5, class: 'form-control' %>
    </div>


    
        <%= f.submit class: 'btn btn-primary my-2'%>
    
<%end%>
</div>